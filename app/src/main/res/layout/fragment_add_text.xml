<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/popup"
        android:visibility="visible"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/idCard1stWhite"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/colorAccent1"
            android:elevation="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linear"
                    android:padding="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/idLV1st2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/idbtnCard1st2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorAccent1"
                            android:elevation="10dp"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="20dp"
                            android:visibility="visible"
                            >

                            <com.dd.morphingbutton.MorphingButton
                                android:id="@+id/select_pdf_file"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="5dp"
                                android:textColor="@color/colorAccent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/sarabunregular"
                                android:background="@color/Bgcolor"
                                android:backgroundTint="@color/Bgcolor"
                                android:src="@drawable/pluse"
                                android:visibility="visible"
                                />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:backgroundTint="@color/colorAccent1"
                                android:background="@drawable/ic_pdf_to_image"
                                android:layout_gravity="center"
                                android:translationZ="2dp"
                                android:elevation="10dp"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textSize="24dp"
                            android:text="Select PDF"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:textColor="@color/colorGray">

                        </TextView>


                        <LinearLayout
                            android:id="@+id/idlocLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/dot">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/fileLocation"
                                android:layout_margin="10dp"
                                android:textSize="16dp"
                                android:text="Your Selected PDF File Location "
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:singleLine="true">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/idLV1st"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/idbtnCard1st"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorAccent1"
                            android:elevation="10dp"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="20dp"
                            android:visibility="visible"
                            android:layout_marginTop="10dp"
                            >

                            <com.dd.morphingbutton.MorphingButton
                                android:id="@+id/select_text_file"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="5dp"
                                android:textColor="@color/colorAccent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/sarabunregular"
                                android:background="@color/Bgcolor"
                                android:backgroundTint="@color/Bgcolor"
                                android:src="@drawable/pluse"
                                android:visibility="visible"
                                />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:backgroundTint="@color/colorAccent1"
                                android:background="@drawable/ic_text_to_pdf"
                                android:layout_gravity="center"
                                android:translationZ="2dp"
                                android:elevation="10dp"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textSize="24dp"
                            android:text="Select Doc/Text"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:textColor="@color/colorGray">

                        </TextView>


                        <LinearLayout
                            android:id="@+id/idlocLL2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/dot">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/fileLocation2"
                                android:layout_margin="10dp"
                                android:textSize="16dp"
                                android:text="Your Selected PDF File Location "
                                android:gravity="left"
                                android:textColor="@color/black"
                                android:singleLine="true">
                            </TextView>



                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:padding="3dp">

                            <com.dd.morphingbutton.MorphingButton
                                android:id="@+id/pdfCreate"
                                style="@style/MorphingButton"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent1"
                                android:fontFamily="@font/sarabunregular"
                                android:text="@string/create_pdf"
                                android:textColor="@color/colorPrimary"
                                android:visibility="gone"

                                app:layout_constraintBottom_toTopOf="@id/recyclerView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textView" />
                        </androidx.cardview.widget.CardView>

<!--                        <LinearLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:orientation="horizontal">-->

<!--                            <ImageView-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginTop="15dp"-->
<!--                                android:src="@drawable/dot">-->

<!--                            </ImageView>-->

<!--                            <TextView-->
<!--                                android:id="@+id/fileLocation2"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_margin="10dp"-->
<!--                                android:gravity="left"-->
<!--                                android:text="Your Selected Doc/Text File Location "-->
<!--                                android:textColor="@color/black"-->
<!--                                android:textSize="16dp"></TextView>-->
<!--                        </LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:stretchColumns="*"
            tools:context=".fragment.AddTextFragment">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="4dp"
                android:id="@+id/select_pdf_file1">
            <com.dd.morphingbutton.MorphingButton
                android:id="@+id/select_pdf_file2"
                style="@style/MorphingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="30dp"
                android:fontFamily="@font/sarabunregular"
                android:padding="3dip"
                android:text="@string/select_pdf_file"
                android:textColor="@color/colorAccent1"
                android:backgroundTint="@color/colorPrimary"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                android:elevation="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="4dp"
                android:layout_below="@id/select_pdf_file1"
                android:id="@+id/select_text_file1">
            <com.dd.morphingbutton.MorphingButton
                android:id="@+id/select_text_file2"
                style="@style/MorphingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="30dp"
                android:fontFamily="@font/sarabunregular"
                android:padding="3dip"
                android:text="@string/select_text_file"
                android:textColor="@color/colorPrimary"
                android:backgroundTint="@color/colorAccent1"/>
            </androidx.cardview.widget.CardView>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/select_text_file1"-->
<!--                app:cardBackgroundColor="@color/colorPrimary"-->
<!--                android:elevation="10dp"-->
<!--                app:cardElevation="4dp"-->
<!--                app:cardCornerRadius="20dp"-->
<!--                android:layout_margin="4dp">-->
<!--            <com.dd.morphingbutton.MorphingButton-->
<!--                android:id="@+id/create_pdf_added_text"-->
<!--                style="@style/MorphingButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:fontFamily="@font/sarabunregular"-->
<!--                android:maxWidth="30dp"-->
<!--                android:padding="3dip"-->
<!--                android:text="@string/create_pdf"-->
<!--                android:textColor="@color/colorAccent1"-->
<!--                android:backgroundTint="@color/colorPrimary"/>-->
<!--            </androidx.cardview.widget.CardView>-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom|center"
            android:orientation="vertical"
            tools:targetApi="lollipop">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/customDividerColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:fontFamily="@font/sarabunbold"
                android:text="@string/more_options_text"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent1"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/enhancement_options_recycle_view_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relativebtmcreate"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="4dp">

                <com.dd.morphingbutton.MorphingButton
                    android:id="@+id/create_pdf_added_text"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:gravity="center"
                    android:fontFamily="@font/sarabunregular"
                    android:text="@string/create_pdf_text"
                    android:backgroundTint="@color/colorAccent1"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/popup2"
        android:visibility="gone"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/colorAccent1"
            android:elevation="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent1"
                    android:elevation="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="20dp"
                    >

                    <com.dd.morphingbutton.MorphingButton
                        android:id="@+id/openpdf"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/sarabunregular"
                        android:background="@color/Bgcolor"
                        android:backgroundTint="@color/Bgcolor"
                        android:src="@drawable/pluse"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/colorAccent1"
                        android:background="@drawable/ic_pdf_to_image"
                        android:layout_gravity="center"
                        android:translationZ="2dp"
                        android:elevation="10dp"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:text="Open This PDF"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorGray">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <include layout="@layout/bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

