<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdateShowActivity"
    android:background="@color/Bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/popup2"
        android:visibility="visible"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/idCard1stWhite2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/colorAccent1"
            android:elevation="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:id="@+id/idLV1st2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/idbtnCard1st2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent1"
                    android:elevation="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="20dp"
                    android:visibility="visible"
                    >

                    <ImageView
                        android:id="@+id/pdfOpen"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/sarabunregular"
                        android:background="@color/Bgcolor"
                        android:backgroundTint="@color/Bgcolor"
                        android:src="@drawable/ic_baseline_security_update_24"
                        android:visibility="visible"
                        />

<!--                    <ImageView-->
<!--                        android:layout_width="80dp"-->
<!--                        android:layout_height="80dp"-->
<!--                        android:backgroundTint="@color/colorAccent1"-->
<!--                        android:background="@drawable/ic_baseline_security_update_24"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:translationZ="2dp"-->
<!--                        />-->

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:text="&quot;Please Update App R PDF to Continue Enjoying Our Latest Features.&quot;"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorGray">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>