<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/popup"
        android:visibility="visible"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/idCard1stWhite"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/colorAccent1"
            android:elevation="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linear"
                    android:padding="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/idLV1st2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/idbtnCard1st2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorAccent1"
                            android:elevation="10dp"
                            app:cardElevation="4dp"
                            app:cardCornerRadius="20dp"
                            android:visibility="visible"
                            >

                            <com.dd.morphingbutton.MorphingButton
                                android:id="@+id/selectFile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:padding="5dp"
                                android:textColor="@color/colorAccent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/sarabunregular"
                                android:background="@color/Bgcolor"
                                android:backgroundTint="@color/Bgcolor"
                                android:src="@drawable/pluse"
                                android:visibility="visible"
                                />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:backgroundTint="@color/colorAccent1"
                                android:background="@drawable/ic_pdf_to_image"
                                android:layout_gravity="center"
                                android:translationZ="2dp"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textSize="24dp"
                            android:text="Select PDF"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:textColor="@color/colorGray">

                        </TextView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/dot">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_extract_text_bottom"
                                android:layout_margin="10dp"
                                android:textSize="16dp"
                                android:gravity="left"
                                android:text="@string/excel_tv_view_text"
                                android:visibility="visible"
                                android:textColor="@color/black">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativebtmcreate"
                    android:layout_margin="20dp"
                    android:layout_alignBottom="@+id/linear"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorAccent1"
                        android:elevation="10dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="14dp"
                        >
                        <com.dd.morphingbutton.MorphingButton
                            android:id="@+id/remove"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:fontFamily="@font/sarabunregular"
                            android:text="@string/remove_duplicate"
                            android:background="@color/colorAccent1"
                            android:backgroundTint="@color/colorAccent1"
                            android:visibility="visible"/>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/popup2"
        android:visibility="gone"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/idCard1stWhite2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/colorAccent1"
            android:elevation="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent1"
                    android:elevation="10dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="20dp"
                    android:visibility="visible"
                    >
                    <Button
                    android:id="@+id/view_pdf"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/sarabunregular"
                        android:background="@color/Bgcolor"
                        android:backgroundTint="@color/Bgcolor"
                        android:src="@drawable/pluse"
                        android:visibility="visible"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/colorAccent1"
                        android:background="@drawable/ic_pdf_to_image"
                        android:layout_gravity="center"
                        android:translationZ="2dp"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:text="Open This File"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:textColor="@color/colorGray">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <include layout="@layout/bottom_sheet" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
